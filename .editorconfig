# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Jupyter notebooks (JSON format)
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# SQL files
[*.sql]
indent_size = 2

# R files
[*.R]
indent_size = 2
