# Development Dockerfile for Data Science Sandbox
FROM python:3.11-slim

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
  build-essential \
  curl \
  git \
  htop \
  nano \
  ssh \
  sudo \
  wget \
  && rm -rf /var/lib/apt/lists/*

# Install Node.js for Jupyter extensions
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
  && apt-get install -y nodejs

# Copy requirements files
COPY requirements*.txt ./

# Install Python dependencies
RUN pip install --upgrade pip && \
  pip install -r requirements.txt && \
  pip install -r requirements-dev.txt && \
  pip install streamlit-autorefresh

# Install Jupyter extensions
RUN jupyter labextension install @jupyter-widgets/jupyterlab-manager && \
  jupyter lab build

# Create non-root user for development
RUN useradd -m -s /bin/bash developer && \
  echo "developer ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set up development environment
USER developer
WORKDIR /app

# Copy application code
COPY --chown=developer:developer . .

# Set development environment variables
ENV STREAMLIT_SERVER_PORT=8503 \
  STREAMLIT_SERVER_RUN_ON_SAVE=true \
  MLFLOW_TRACKING_URI=file:///app/mlruns \
  WANDB_MODE=offline

# Expose ports (added 8502, 8503 for enhanced dashboards)
EXPOSE 8888 8501 8502 8503 8050 5000

# Default command - run enhanced gamification dashboard in development mode
CMD ["streamlit", "run", "apps/streamlit_app_enhanced.py", "--server.port=8503", "--server.address=0.0.0.0", "--server.runOnSave=true"]
