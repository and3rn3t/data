[flake8]
# Basic settings
max-line-length = 88
max-complexity = 15
statistics = True
count = True
show-source = True

# Extended ignores for data science workflows
extend-ignore =
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (conflicts with black)
    E402,  # module level import not at top of file (common in notebooks)
    F401,  # imported but unused (common in __init__.py)
    B008,  # do not perform function calls in argument defaults
    B011,  # do not call assert False since python -O removes these calls

# File exclusions
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox,
    node_modules,
    mlruns,
    mlartifacts,
    wandb,
    logs

# Per-file ignores for specific use cases
per-file-ignores =
    __init__.py:F401,F403
    tests/*:B011,S101
    challenges/*:N803,N806,C901
    notebooks/*:E402,F401,B018
    scripts/*:T201
    setup.py:ALL
